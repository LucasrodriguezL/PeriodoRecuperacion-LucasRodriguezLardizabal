<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Books Repository</title>

  
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    <%- include('partials/header.ejs') %>

    <div class="container">

      <form action="/books/search" method="POST" class="col-12 col-lg-auto mb-3 me-lg-3" _lpchecked="1">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Book Title..." name="title">
          <button type="submit" class="btn btn-secondary">Search</button>
        </div>
      </form>

      <div class="search-results">
        <% if (books.length > 0) { %>
          <h2>Resultados de la búsqueda:</h2>
          <ul>
            <% books.forEach((book) => { %>
              <li>
                <h3><%= book.title %></h3>
                <img class="d-block mx-auto mb-4" src="<%= book.cover %>" alt="<%= book.title %>" width="172" height="257">
                <div class="col-lg-6 mx-auto">
                  <p class="lead mb-4 fw-bold">Authors:
                    <% book.authors.forEach(author => { %>
                      <%= author.name %><br>
                    <% }); %>
                  </p>
                  <p class="lead mb-4 fw-bold">Release Date: <%= book.releaseDate %></p>
                  <p class="lead mb-4"><%= book.description %></p>
                <p class="lead mb-4"><%= book.description %></p>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p>No se encontraron resultados para la búsqueda.</p>
        <% } %>
      </div>

    </div>
  </div>

  <% include('partials/footer.ejs') %>
</body>
</html>